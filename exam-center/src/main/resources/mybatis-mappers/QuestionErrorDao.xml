<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloud.exam.dao.QuestionErrorDao">


    <delete id="delQuestionError" parameterType="list">
        DELETE
        FROM
        question_error
        WHERE
        1=1
        <if test="kpIds != null and kpIds.length >0 ">
            AND kp_id in
            <foreach collection="kpIds" index="index" item="kpId" open="(" separator="," close=")" >
                ${kpId}
            </foreach>
        </if>
    </delete>

