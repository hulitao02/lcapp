<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloud.backend.dao.DictDao">

    <sql id="where">
        <where>
            <if test="dictName != null and dictName != ''">
                <bind name="_dictName" value="'%' + dictName + '%'"/>
                and t.dictName = #{dictName}
            </if>
            <if test="dictType != null and dictType != ''">
                <bind name="_dictType" value="dictType"/>
                and t.dictType = #{dictType}
            </if>
            <if test="dictValue != null and dictValue != ''">
                <bind name="_dictValue" value="dictValue"/>
                and t.dictValue = #{dictValue}
            </if>
        </where>
    </sql>
    <select id="count" resultType="int">
        select count(*) from backend_dict t
        <include refid="where" />
    </select>

    <select id="findData" resultType="com.cloud.model.common.Dict">
        select * from backend_dict t
        <include refid="where" />
        order by t.id desc
        <if test="start != null and start >= 0 and length != null and length > 0">
            limit #{length} OFFSET #{start}
        </if>
    </select>

    <select id="getThemeType" resultType="String">
        select dictname FROM backend_dict WHERE dictvalue = '1' and dicttype ='theme_type'
    </select>

    <select id="setThemeType">
        UPDATE backend_dict set dictvalue = '0' where dicttype = 'theme_type' ;
        UPDATE backend_dict set dictvalue = '1' where id = #{id}
    </select>

    <select id="getThemeTypeList" resultType="com.cloud.model.common.Dict">
        select * from backend_dict t
        <include refid="where" />
        order by t.id desc
        <if test="start != null and start >= 0 and length != null and length > 0">
            limit #{length} OFFSET #{start}
        </if>
    </select>

    <select id="getLogoDict" resultType="com.cloud.model.common.Dict">
        select * from backend_dict t
        where t.dictType= #{dictType} and t.dictName=#{dictName}

    </select>
</mapper>
