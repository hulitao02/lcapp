<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloud.backend.dao.IntDirectDao">

    <sql id="where">
        <where>
            <if test="name != null and name != ''">
                <bind name="_name" value="'%' + name + '%'"/>
                and t.name like #{_name}
            </if>
            <if test="describe != null and describe != ''">
                <bind name="_describe" value="'%' + describe + '%'"/>
                and t.describe like #{_describe}
            </if>
            <if test="country != null and country != ''">
                <bind name="_country" value="'%' + country + '%'"/>
                and t.country like #{_country}
            </if>
        </where>
    </sql>
    <select id="count" resultType="int">
        select count(*) from int_direct t
        <include refid="where" />
    </select>

    <select id="findData" resultType="com.cloud.model.common.IntDirect">
        select * from int_direct t
        <include refid="where" />
        order by t.id desc
        <if test="start != null and start >= 0 and length != null and length > 0">
            limit #{length} OFFSET #{start}
        </if>
    </select>
</mapper>
