<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloud.user.dao.SysDepartmentDao">

    <sql id="where">
        <where>
            <if test="dname != null and dname != ''">
                <bind name="_dname" value="'%' + dname + '%'"/>
                and t.dname = #{_dname}
            </if>

        </where>
    </sql>
    <select id="count" resultType="int">
        select count(*) from sys_department t
        <include refid="where" />
    </select>

    <select id="findData" resultType="com.cloud.model.user.SysDepartment">
        select * from sys_department t
        <include refid="where" />
        order by t.id desc
        <if test="start != null and start >= 0 and length != null and length > 0">
            limit #{length} OFFSET #{start}
        </if>
    </select>

</mapper>
